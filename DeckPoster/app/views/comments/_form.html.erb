<%= form_for comment do |f|%>
  <% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
    <p>
      <%= f.label :content %>
      <%= f.text_area :content %>
    </p>
    <%= f.hidden_field :user_id, :value => current_user.id%>
    <%= f.hidden_field :deck_id, :value => params[:deck_id] %>
      <%= f.submit %>
    <% end %>